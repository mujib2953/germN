{
    "name": "germn",
    "version": "0.0.1",
    "description": "Playground for GraphQL, Express, React, Mongo and Node. It is basically to learn and experiment with this stack.",
    "main": "dist/server.js",
    "scripts": {
        "clean": "rimraf dist/**",
        "start": "node dist/server.js",
        "start:watch": "nodemon",
        "prestart": "npm run build",
        "build": "tsc",
        "prebuild": "npm run lint",
        "lint": "tslint -c tslint.json -p tsconfig.json --fix",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "dependencies": {
        "bcrypt": "^3.0.6",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "dotenv": "^8.0.0",
        "express": "^4.17.1",
        "gravatar": "^1.8.0",
        "jsonwebtoken": "^9.0.0",
        "mongoose": "^5.6.0",
        "passport": "^0.4.0",
        "passport-jwt": "^4.0.0",
        "validator": "^11.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mujib2953/germN.git"
    },
    "keywords": [
        "React",
        "Node",
        "TypeScript"
    ],
    "author": "Mujib Ansari",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/mujib2953/germN/issues"
    },
    "homepage": "https://github.com/mujib2953/germN#readme",
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/body-parser": "^1.17.0",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.17.0",
        "@types/gravatar": "^1.8.0",
        "@types/jsonwebtoken": "^8.3.2",
        "@types/mongoose": "^5.5.6",
        "@types/node": "^12.0.8",
        "@types/passport": "^1.0.0",
        "@types/passport-jwt": "^3.0.1",
        "@types/validator": "^10.11.1",
        "nodemon": "^1.19.1",
        "rimraf": "^2.6.3",
        "tslint": "^5.17.0",
        "typescript": "^3.5.2"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "*.ts"
        ],
        "exec": "npm start",
        "ext": "ts"
    }
}
